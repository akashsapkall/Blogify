<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>AddBlog Page</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-4">
        <form action="/blog" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverimg" class="form-label">Cover Image </label>
                <input type="file" class="form-control" id="coverimg" name="coverimg">
              </div>
            <div class="form-floating mb-3">
              <!-- <label for="title" class="form-label">Name </label> -->
              <input type="text" class="form-control" id="title" name="title">
              <label for="title">Title</label>
            </div>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Add Content here" id="floatingTextarea2" style="height: 100px" name="content"></textarea>
                <label for="floatingTextarea2">Content</label>
              </div>
          <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
      </div>
    <%- include("./partials/script") %>
</body>
</html>